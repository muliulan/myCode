<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        android:layout_width="0dp"
        android:id="@+id/tv_1"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:background="@color/black"
        android:text="111111111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_2"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        android:id="@+id/tv_2"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:background="@color/colorPrimary"
        android:text="222222222"
        app:layout_constraintStart_toEndOf="@id/tv_1"
        app:layout_constraintEnd_toStartOf="@id/tv_3"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:minWidth="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:background="@color/black"
        android:text="333333333333333333333333333333333"
        app:layout_constraintStart_toEndOf="@id/tv_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切换长度"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_1"/>

    <Button
        android:id="@+id/btn_clear_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空文本3"
        app:layout_constraintStart_toEndOf="@id/btn_change"
        app:layout_constraintTop_toBottomOf="@id/tv_1" />

</androidx.constraintlayout.widget.ConstraintLayout>